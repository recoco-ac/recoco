{
  "compilerOptions": {
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.dev.json"
    }
  ]
}
